{
  "name": "mergedropx",
  "version": "1.0.0",
  "description": "Hyper-casual merge-and-drop mobile game",
  "main": "index.html",
  "scripts": {
    "start": "npx serve .",
    "build": "echo 'No build step needed - pure HTML/JS'",
    "cap:init": "npx cap init MergeDropX com.mergedropx.game --web-dir .",
    "cap:android": "npx cap add android && npx cap sync android",
    "cap:ios": "npx cap add ios && npx cap sync ios"
  },
  "dependencies": {
    "@capacitor/core": "^5.7.0",
    "@capacitor/android": "^5.7.0",
    "@capacitor/ios": "^5.7.0",
    "@capacitor/haptics": "^5.0.0",
    "@capacitor/status-bar": "^5.0.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.7.0"
  }
}
